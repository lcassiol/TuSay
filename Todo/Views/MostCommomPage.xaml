<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.MostCommomPage" Title="Frases Mais Comuns">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Image="Bal1.png" Grid.Row="1" Grid.Column="1" Clicked="translationLunchClick"/>
        <Button BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Image="Bal2.png" Grid.Row="1" Grid.Column="0" Clicked="translationShoppingClick"/>
        <Button BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Image="Bal3.png" Grid.Row="0" Grid.Column="0" Clicked="translationBeachClick"/>
        <Button BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Image="Bal4.png" Grid.Row="0" Grid.Column="1" Clicked="translationGoodClick" />
    </Grid>

    
</ContentPage>